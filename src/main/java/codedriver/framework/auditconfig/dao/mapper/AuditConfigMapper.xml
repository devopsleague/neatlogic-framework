<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="codedriver.framework.auditconfig.dao.mapper.AuditConfigMapper">
    <select id="searchAuditConfig" resultType="codedriver.framework.auditconfig.dto.AuditConfigVo">
        select name, config as configStr
        from audit_config
    </select>

    <select id="getAuditConfigByName" parameterType="java.lang.String"
            resultType="codedriver.framework.auditconfig.dto.AuditConfigVo">
        select name, config as configStr
        from audit_config
        where name = #{value}
    </select>

    <insert id="saveAuditConfig" parameterType="codedriver.framework.auditconfig.dto.AuditConfigVo">
        insert into audit_config
            (`name`, `config`)
        values (#{name}, #{configStr})
        ON DUPLICATE KEY
            UPDATE `config` = #{configStr}
    </insert>

    <delete id="deleteAuditConfig" parameterType="java.lang.String">
        delete
        from audit_config
        where `name` = #{value}
    </delete>
</mapper>
