<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="codedriver.framework.dao.mapper.TenantMapper">

	<select id="getTenantAuditDetailByHash" parameterType="java.lang.String" resultType="java.lang.String">
		SELECT
		`content`
		FROM
		`tenant_audit_detail`
		WHERE
		`hash` = #{value}
	</select>

	<select id="getTenantModuleGroupByTenantId" parameterType="java.lang.Long" resultType="java.lang.String">
		SELECT
		`module_group` AS moduleGroup
		FROM
		`tenant_modulegroup`
		WHERE
		tenant_id = #{value}
	</select>

	<sql id="searchTenantAuditCondition">
		<where>
			tenant_id = #{tenantId}
			<if test="groupId != null">
				AND group_id = #{groupId}
			</if>
		</where>
	</sql>

	<select id="searchTenantAudit" parameterType="codedriver.framework.dto.TenantAuditVo" resultType="codedriver.framework.dto.TenantAuditVo">
		SELECT
		`id`,
		`group_id` AS groupId,
		`tenant_id` as tenantId,
		`module_id` as moduleId,
		`module_group` as moduleGroup,
		`version`,
		`start_time` as startTime,
		`end_time` as endTime,
		(UNIX_TIMESTAMP(IFNULL(end_time, NOW(3)))*1000 - UNIX_TIMESTAMP(start_time)*1000) AS timeCost,
		`result_hash` as resultHash,
		`error_hash` as errorHash,
		`status`
		FROM
		`tenant_audit`
		<include refid="searchTenantAuditCondition"></include>
		ORDER BY id DESC
	</select>

	<select id="searchTenantAuditCount" parameterType="codedriver.framework.dto.TenantAuditVo" resultType="int">
		SELECT
		COUNT(1)
		FROM
		`tenant_audit`
		<include refid="searchTenantAuditCondition"></include>
	</select>

	<sql id="searchTenantCondition">
		<where>
			<if test="keyword != null and keyword != ''">
				AND name LIKE concat('%', #{keyword}, '#')
			</if>
		</where>
	</sql>

	<select id="searchTenant" parameterType="codedriver.framework.dto.TenantVo" resultType="codedriver.framework.dto.TenantVo">
		SELECT
		`id`,
		`uuid`,
		`name`,
		`is_active` AS isActive,
		`expire_date` AS expireDate,
		`description`
		FROM
		`tenant`
		<include refid="searchTenantCondition"></include>
		ORDER BY id DESC
	</select>

	<select id="searchTenantCount" parameterType="codedriver.framework.dto.TenantVo" resultType="int">
		SELECT
		COUNT(1)
		FROM
		`tenant`
		<include refid="searchTenantCondition"></include>
	</select>

	<select id="checkTenantUuidIsExists" parameterType="codedriver.framework.dto.TenantVo" resultType="int">
		SELECT
		COUNT(1)
		FROM
		`tenant`
		WHERE
		uuid = #{uuid}
		<if test="id != null">
			AND id != #{id}
		</if>
	</select>

	<select id="getTenantByUuid" parameterType="java.lang.String" resultType="codedriver.framework.dto.TenantVo">
		SELECT
		`id`,
		`uuid`,
		`name`,
		`is_active` AS isActive,
		`expire_date` AS expireDate,
		`description`
		FROM
		`tenant`
		WHERE `uuid` = #{value}
	</select>

	<select id="getTenantById" parameterType="java.lang.Long" resultType="codedriver.framework.dto.TenantVo">
		SELECT
		`id`,
		`uuid`,
		`name`,
		`is_active` AS isActive,
		`expire_date` AS expireDate,
		`description`
		FROM
		`tenant`
		WHERE `id` = #{value}
	</select>

	<select id="getAllActiveTenant" resultType="codedriver.framework.dto.TenantVo">
		SELECT
		t.`uuid`,
		t.`name`
		FROM
		`tenant` t
		JOIN `datasource` ds ON ds.`tenant_uuid` = t.`uuid`
		WHERE t.`is_active` = 1
	</select>

	<insert id="insertTenant" parameterType="codedriver.framework.dto.TenantVo">
		INSERT INTO `tenant` (
		`id`,
		`uuid`,
		`name`,
		`is_active`,
		`expire_date`,
		`status`,
		`description`
		)
		VALUES
		(
		#{id},
		#{uuid},
		#{name},
		#{isActive},
		#{expireDate},
		#{status},
		#{description}
		)
	</insert>

	<insert id="insertTenantModuleGroup">
		INSERT INTO `tenant_modulegroup` (`tenant_id`, `module_group`)
		VALUES
		(#{tenantId}, #{moduleGroup})
	</insert>

	<insert id="insertTenantAudit" parameterType="codedriver.framework.dto.TenantAuditVo">
		INSERT INTO `tenant_audit` (
		`id`,
		`tenant_id`,
		`group_id`,
		`start_time`,
		`module_id`,
		`module_group`,
		`version`,
		`status`
		)
		VALUES
		(
		#{id},
		#{tenantId},
		#{groupId},
		NOW(3),
		#{moduleId},
		#{moduleGroup},
		#{version},
		#{status}
		)
	</insert>

	<insert id="replaceTenantAuditDetail">
		REPLACE INTO `tenant_audit_detail` (`hash`, `content`)
		VALUES
		(#{hash}, #{content})
	</insert>

	<insert id="insertTenantModule" parameterType="codedriver.framework.dto.TenantModuleVo">
		INSERT INTO `tenant_module` (
		`tenant_id`,
		`module_id`,
		`fcd`
		)
		VALUES
		(
		#{tenantId},
		#{moduleId},
		NOW(3)
		)
	</insert>

	<update id="updateTenantAudit" parameterType="codedriver.framework.dto.TenantAuditVo">
		UPDATE
		`tenant_audit`
		SET
		`result_hash` = #{resultHash},
		`error_hash` = #{errorHash},
		`version` = #{version},
		`end_time` = NOW(3),
		`status` = #{status}
		WHERE `id` = #{id}
	</update>

	<update id="updateTenant" parameterType="codedriver.framework.dto.TenantVo">
		UPDATE
		`tenant`
		SET
		`name` = #{name},
		`is_active` = #{isActive},
		`expire_date` = #{expireDate},
		`description` = #{description}
		WHERE `id` = #{id}
	</update>

	<update id="updateTenantStatus" parameterType="codedriver.framework.dto.TenantVo">
		UPDATE
		`tenant`
		SET
		`status` = #{status}
		WHERE `id` = #{id}
	</update>

	<update id="updateTenantModule" parameterType="codedriver.framework.dto.TenantModuleVo">
		UPDATE
		`tenant_module`
		SET
		`version` = #{version},
		`lcd` = NOW(3)
		WHERE
		`tenant_id` = #{tenantId}
		AND `module_id` = #{moduleId}
	</update>

	<delete id="deleteTenantModuleGroupByTenantId" parameterType="java.lang.Long">
		DELETE
		FROM
		`tenant_modulegroup`
		WHERE `tenant_id` = #{value}
	</delete>
</mapper>

