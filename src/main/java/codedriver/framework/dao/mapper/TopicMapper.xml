<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="codedriver.framework.dao.mapper.TopicMapper">

    <delete id="deleteTopic">
        delete
        from topic
    </delete>

    <select id="getTopic" resultType="codedriver.framework.dto.TopicVo">
        select config as configStr,
               lcd,
               lcu,
               fcd,
               fcu
        from topic
    </select>

    <insert id="insertTopic" parameterType="codedriver.framework.dto.TopicVo">
        insert into topic(config, lcd, lcu, fcd, fcu)
        values (#{configStr}, now(3), #{lcu}, now(3), #{fcu})
    </insert>
</mapper>