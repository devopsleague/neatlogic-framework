<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="neatlogic.framework.dao.mapper.WechatMapper">

    <select id="getCount" resultType="int">
        SELECT
            COUNT(1)
        FROM `wechat`
        LIMIT 1
    </select>

    <select id="getWechat" resultType="neatlogic.framework.dto.WechatVo">
        SELECT
            `corp_id` AS corpId,
            `corp_secret` AS corpSecret,
            `agent_id` AS agentId
        FROM `wechat`
        LIMIT 1
    </select>

    <insert id="insertWechat" parameterType="neatlogic.framework.dto.WechatVo">
        INSERT INTO `wechat` (
            `corp_id`,
            `corp_secret`,
            `agent_id`
        )
        VALUES
            (
                #{corpId},
                #{corpSecret},
                #{agentId}
            )
    </insert>

    <delete id="deleteWechat">
        DELETE FROM `wechat`
    </delete>
</mapper>
