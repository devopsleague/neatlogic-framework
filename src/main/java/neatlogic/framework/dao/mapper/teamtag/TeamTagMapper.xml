<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="neatlogic.framework.dao.mapper.teamtag.TeamTagMapper">
    <select id="getTeamTagListByIdList" resultType="neatlogic.framework.dto.teamtag.TeamTagVo">
        SELECT
            tt.id,
            tt.matrix_uuid AS matrixUuid,
            m.`name` as matrixName,
            tt.matrix_attr AS matrixAttr,
            tt.matrix_attr_value AS matrixAttrValue,
            tt.checked_children as checkedChildren
        FROM
            `team_tag` tt
                left JOIN `matrix` m ON tt.matrix_uuid = m.uuid
        WHERE tt.`id` in
        <foreach collection="list" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>
    <select id="searchTeamTagCount" resultType="java.lang.Integer">
        SELECT
        count(`id`)
        FROM `team_tag`
        <where>
            <if test="keyword != null and keyword != ''">
                `name` LIKE CONCAT('%',#{keyword},'%')
            </if>
            <if test="idList != null and idList.size() > 0">
                `id` in
                <foreach collection="idList" item="id" open="(" close=")" separator=",">
                    #{id}
                </foreach>
            </if>
        </where>
    </select>
    <select id="searchTeamTag" resultType="neatlogic.framework.dto.teamtag.TeamTagVo">
        SELECT
            tt.id,
            tt.matrix_uuid AS matrixUuid,
            m.`name` AS matrixName,
            tt.matrix_attr AS matrixAttr,
            tt.matrix_attr_value AS matrixAttrValue,
            tt.checked_children as checkedChildren
        FROM
            `team_tag` tt
                left JOIN `matrix` m ON tt.matrix_uuid = m.uuid
        <where>
            <if test="keyword != null and keyword != ''">
                tt.`name` LIKE CONCAT('%',#{keyword},'%')
            </if>
            <if test="idList != null and idList.size() > 0">
                tt.`id` in
                <foreach collection="idList" item="id" open="(" close=")" separator=",">
                    #{id}
                </foreach>
            </if>
        </where>
    </select>
</mapper>

