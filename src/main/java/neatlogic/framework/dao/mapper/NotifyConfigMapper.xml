<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="neatlogic.framework.dao.mapper.NotifyConfigMapper">

    <select id="getConfigByType" parameterType="java.lang.String" resultType="java.lang.String">
        SELECT `config` FROM `notify_config` WHERE `type` = #{value}
    </select>

    <insert id="insertNotifyConfig" parameterType="java.util.Map">
        INSERT INTO `notify_config` (`type`, `config`)
        VALUES (#{type}, #{config})
        ON DUPLICATE KEY
        UPDATE `config` = #{config}
    </insert>
</mapper>
